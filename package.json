{
  "name": "church-management",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.28",
    "@hello-pangea/dnd": "^18.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "docx": "^9.5.1",
    "file-saver": "^2.0.5",
    "firebase": "^12.9.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^7.0.0",
    "jspdf": "^4.1.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.554.0",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.9.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "deploy": "./scripts/deploy.sh",
    "deploy:preview": "npm run build && firebase hosting:channel:deploy preview",
    "deploy:production": "npm run build && firebase deploy --only hosting",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "predeploy": "npm run lint && npm run typecheck && npm run build",
    "setup:indexes": "node scripts/setup-firestore-indexes.js",
    "migrate:permissions": "npx ts-node scripts/migratePermissions.ts",
    "migrate:permissions:validate": "npx ts-node scripts/migratePermissions.ts --validate-only"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "unused-imports/no-unused-imports": "error",
      "unused-imports/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "none",
          "ignoreRestSiblings": true
        }
      ],
      "react-hooks/exhaustive-deps": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/**/*.[jt]s?(x)",
          "**/?(*.)+(spec|test).[jt]s?(x)"
        ],
        "rules": {
          "testing-library/no-node-access": "warn",
          "testing-library/no-wait-for-multiple-assertions": "warn",
          "testing-library/no-container": "warn",
          "testing-library/no-wait-for-side-effects": "warn",
          "testing-library/no-unnecessary-act": "warn",
          "testing-library/render-result-naming-convention": "warn",
          "testing-library/no-render-in-setup": "warn",
          "testing-library/await-async-utils": "warn",
          "jest/no-conditional-expect": "warn",
          "jest/no-jasmine-globals": "error"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@types/leaflet": "^1.9.20",
    "autoprefixer": "^10.4.21",
    "craco-alias": "^3.0.1",
    "dotenv": "^17.2.3",
    "eslint-plugin-unused-imports": "^4.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6"
  }
}
